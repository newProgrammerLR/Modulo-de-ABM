<article class="card">
    <div class="card-left">
        <figure><img src="/images/groups/<%= group.image ? group.image : 'default.png' %>" alt=""></figure>
        <h3>#<%= group.id %></h3>
    </div>
    <div class="card-content">
        <h3><%= group.nombre %></h3>
        <% if (group.categoria) { %>
            <p>Categor√≠a: <%= group.categoria %></p>
        <%} %>
        <div>
            <a class="button" href="/groups/<%= group.id %>">Ver detalle</a>
        </div>
    </div>   
</article>